<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/media_item_height"
    android:layout_marginBottom="0dp">

    <!--ImageView
        android:layout_width="@dimen/media_item_width"
        android:layout_height="@dimen/media_item_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/media_item_icon_margin_start"
        android:src="@drawable/default_album"
        android:contentDescription="@string/content_desc_list_item_eq"
        android:id="@+id/item_album_art"
        android:scaleType="centerCrop" /-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/media_item_text_margin_start"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/media_item_padding_top"
        android:layout_marginBottom="@dimen/media_item_padding_bottom">

        <TextView
            android:id="@+id/item_title"
            android:text="I Love WYQ as a song has a long long name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#de000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_singer"
            android:text="JSF as a singer has a long long name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#8a000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_album_title"
            android:text="JSF love WYQ as an album has a long long name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#8a000000"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>